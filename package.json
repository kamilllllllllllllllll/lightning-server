{
  "name": "lightning-server",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm --workspace apps/backend run start:dev",
    "dev:desktop": "npm --workspace apps/desktop run dev",
    "build:backend": "npm --workspace apps/backend run build",
    "build:desktop": "npm --workspace apps/desktop run build"
  }
}
